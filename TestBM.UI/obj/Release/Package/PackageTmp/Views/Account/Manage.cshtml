@model TestBM.UI.Models.ManageModel
@{
    ViewBag.Title = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ModifyBudget</h2>

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Modifica il tuo budget mensile.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.MontlyBudget, new { @class = "col-md-2 control-label" }) 
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.MontlyBudget, new { @class = "form-control" })
        </div>       
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Modifica" />
        </div>
    </div>
}